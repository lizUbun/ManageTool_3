<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xlc.managetool_3.MainActivity">

    <TextView
        android:id="@+id/main_activity_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆人："
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/main_activity_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="输入登陆人"
        android:inputType="textPersonName"
        android:text="root"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/main_activity_name_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_activity_pass_view"
        android:layout_width="49dp"
        android:layout_height="22dp"
        android:text="验证："
        app:layout_constraintLeft_toLeftOf="@+id/main_activity_name_view"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_name_view"
        tools:layout_editor_absoluteY="80dp" />

    <EditText
        android:id="@+id/main_activity_pass_word"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="输入验证"
        android:inputType="textPassword"
        android:text="root"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/main_activity_pass_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_name" />

    <Button
        android:id="@+id/main_activity_sure"
        android:layout_width="161dp"
        android:layout_height="51dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="确 定"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_pass_word" />

    <Button
        android:id="@+id/main_activity_clear"
        android:layout_width="161dp"
        android:layout_height="51dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="32dp"
        android:text="清 空"
        app:layout_constraintLeft_toRightOf="@+id/main_activity_sure"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_pass_word" />

    <TextView
        android:id="@+id/debug_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_sure" />
</android.support.constraint.ConstraintLayout>
