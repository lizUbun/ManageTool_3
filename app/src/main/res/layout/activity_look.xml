<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xlc.managetool_3.LookActivity">

    <Button
        android:id="@+id/look_activity_all_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="所有"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_search" />

    <EditText
        android:id="@+id/look_activity_search"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="搜索内容"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/look_activity_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="开始搜索"
        app:layout_constraintLeft_toRightOf="@+id/look_activity_search"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/look_activity_select_sure"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="添加完成"
        app:layout_constraintLeft_toRightOf="@+id/look_activity_show_databse"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_search" />

    <Button
        android:id="@+id/look_activity_show_databse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="数据库"
        app:layout_constraintLeft_toRightOf="@+id/look_activity_all_tool"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_search" />

    <TextView
        android:id="@+id/look_activity_look_page"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="226dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="  /  "
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_all_tool" />

    <Button
        android:id="@+id/look_activity_look_last_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="前一页"
        app:layout_constraintLeft_toRightOf="@+id/look_activity_look_page"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_all_tool" />

    <Button
        android:id="@+id/look_activity_look_next_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="后一页"
        app:layout_constraintLeft_toRightOf="@+id/look_activity_look_last_page"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_show_databse" />

    <TextView
        android:id="@+id/look_activity_look_text1"
        android:layout_width="@dimen/display_tool_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="1"
        android:textSize="@dimen/text_view_tool_size_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_last_page" />

    <TextView
        android:id="@+id/look_activity_look_text2"
        android:layout_width="@dimen/display_tool_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textSize="@dimen/text_view_tool_size_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text1" />

    <TextView
        android:id="@+id/look_activity_look_text3"
        android:layout_width="@dimen/display_tool_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="3"
        android:textSize="@dimen/text_view_tool_size_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text2" />

    <TextView
        android:id="@+id/look_activity_look_text4"
        android:layout_width="@dimen/display_tool_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="4"
        android:textSize="@dimen/text_view_tool_size_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text3" />

    <TextView
        android:id="@+id/look_activity_look_text5"
        android:layout_width="@dimen/display_tool_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="5"
        android:textSize="@dimen/text_view_tool_size_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text4" />

    <TextView
        android:id="@+id/look_activity_look_text6"
        android:layout_width="@dimen/display_tool_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="6"
        android:textSize="@dimen/text_view_tool_size_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text5" />

    <TextView
        android:id="@+id/look_activity_look_text7"
        android:layout_width="@dimen/display_tool_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="7"
        android:textSize="@dimen/text_view_tool_size_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text6" />

    <TextView
        android:id="@+id/look_activity_look_text8"
        android:layout_width="@dimen/display_tool_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="8"
        android:textSize="@dimen/text_view_tool_size_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text7" />

    <Button
        android:id="@+id/look_activity_borrow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="借用情况"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text8" />

    <Button
        android:id="@+id/add_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入借用清单"
        app:layout_constraintLeft_toRightOf="@+id/look_activity_borrow_button"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text8" />

    <TextView
        android:id="@+id/tool_car_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="工具数量："
        app:layout_constraintLeft_toRightOf="@+id/add_car"
        app:layout_constraintTop_toBottomOf="@+id/look_activity_look_text8" />

    <TextView
        android:id="@+id/tool_car_amount_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/add_car"
        app:layout_constraintTop_toBottomOf="@+id/tool_car_amount" />

    <ImageView
        android:id="@+id/tool_pic_view"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:scaleType="centerInside"
        android:src="@drawable/t1"
        app:layout_constraintLeft_toRightOf="@+id/look_activity_look_text1"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
