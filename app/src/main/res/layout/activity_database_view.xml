<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xlc.managetool_3.DatabaseView">

    <Button
        android:id="@+id/show_database_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="名称"
        app:layout_constraintLeft_toRightOf="@+id/show_database_id_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_database_class_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="类别"
        app:layout_constraintLeft_toRightOf="@+id/show_database_name_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_database_amount_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:text="数量"
        app:layout_constraintLeft_toRightOf="@+id/show_database_class_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
                android:id="@+id/show_database_id_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="ID"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_database_text_view1"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/show_database_last_page" />

    <TextView
        android:id="@+id/show_database_text_view3"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/show_database_text_view1" />

    <TextView
        android:id="@+id/show_database_text_view4"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_database_text_view3" />

    <TextView
        android:id="@+id/show_database_text_view5"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_database_text_view4" />

    <TextView
        android:id="@+id/show_database_text_view6"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_database_text_view5" />

    <TextView
        android:id="@+id/show_database_text_view7"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_database_text_view6" />

    <TextView
        android:id="@+id/show_database_text_view8"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_database_text_view7" />

    <TextView
        android:id="@+id/show_database_text_view2"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"


        android:text="8"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/show_database_text_view8" />

    <Button
        android:id="@+id/show_database_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="搜索"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toRightOf="@+id/show_database_searchView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_database_amount_button" />

    <SearchView
        android:id="@+id/show_database_searchView"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_database_name_button" />

    <Button
        android:id="@+id/show_database_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="编辑"
        app:layout_constraintLeft_toRightOf="@+id/show_database_amount_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_database_page"
        android:layout_width="86dp"
        android:layout_height="35dp"
        android:text="1/10"
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/show_database_searchView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"/>

    <Button
        android:id="@+id/show_database_last_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上一页"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/show_database_searchView"
        app:layout_constraintLeft_toRightOf="@+id/show_database_page"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/show_database_next_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="下一页"
        app:layout_constraintLeft_toRightOf="@+id/show_database_last_page"
        app:layout_constraintTop_toBottomOf="@+id/show_database_searchView" />


</android.support.constraint.ConstraintLayout>
